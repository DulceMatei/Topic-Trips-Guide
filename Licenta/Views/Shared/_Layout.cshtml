@using Microsoft.AspNetCore.Identity
@using Licenta.Areas.Identity.Data
@inject UserManager<LicentaUser> UserManager
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopicTripsGuide</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Licenta.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100"
      data-is-admin="@(User.IsInRole("Admin").ToString().ToLower())"
      data-user-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value"
      data-is-personalizat="@(ViewBag.IsPersonalizat != null ? ViewBag.IsPersonalizat.ToString().ToLower() : "false")">

    <!-- Navbar -->
    @if (ViewBag.HideNavbar != true){
    <header class="bg-white shadow-lg border-bottom border-success border-3">
        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo.png" alt="TopicTripsGuide Logo" class="logo-img me-3">
                    <div class="d-none d-sm-block">
                        <h1 class="h4 mb-0 fw-bold text-dark">TopicTripsGuide</h1>
                        <small class="text-muted fw-medium">Explorează & Descoperă</small>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="ms-auto d-flex align-items-center gap-3">
                        <!-- Traseele mele personalizate - transparent -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-transparent rounded-pill fw-semibold px-4"
                               asp-page="/Trasee/TraseePersonalizate">
                                <i class="bi bi-route me-2"></i> Trasee personalizate
                            </a>

                        }

                        <!-- Panou Admin -->
                        <a class="btn btn-outline-success rounded-pill fw-semibold px-4 admin-only d-none"
                           asp-page="/Admin/PanouAdmin">
                            <i class="bi bi-shield-lock me-2"></i> Panou administrator
                        </a>


                        <!-- Butoane pentru cont - separate -->
                        @if (User.Identity.IsAuthenticated)
                        {
                                <a class="btn btn-outline-success  rounded-pill fw-semibold px-4"
                               asp-area="Identity" asp-page="/Account/Manage/Index">
                                @{
                                    var currentUser = await UserManager.GetUserAsync(User);
                                }
                                <i class="bi bi-person me-2"></i> @currentUser?.Nume
                            </a>

                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger rounded-pill fw-semibold px-4">
                                    <i class="bi bi-box-arrow-right me-2"></i> Deconectare
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary rounded-pill fw-semibold px-4"
                               asp-area="Identity" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Conectare
                            </a>

                            <a class="btn btn-success rounded-pill fw-semibold px-4"
                               asp-area="Identity" asp-page="/Account/Register">
                                <i class="bi bi-person-plus me-2"></i> Înregistrare
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    }

    <!-- Continut principal -->
    <main class="flex-grow-1 container py-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    @if (ViewBag.HideFooter == null || ViewBag.HideFooter == false)
    {
        <footer class="bg-dark text-white py-5 mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 mb-4 mb-md-0">
                        <div class="card bg-transparent border-0 p-3 rounded-4" style="background-color: rgba(255,255,255,0.02);">
                            <div class="d-flex align-items-center mb-3">
                                <img src="~/Images/Logo.png" alt="TopicTripsGuide Logo" class="logo-img me-3">
                                <div>
                                    <h5 class="mb-1 fw-bold text-white">TopicTripsGuide</h5>
                                    <small class="text-muted">Explorează & Descoperă</small>
                                </div>
                            </div>
                            <p class="text-light fs-6 mb-0">
                                Ghidul tău pentru cele mai frumoase trasee culinare și istorice din Europa.
                                Creează experiențe de călătorie memorabile și autentice.
                            </p>
                        </div>
                    </div>

                    <!-- Navigare rapida -->
                    <div class="col-md-7">
                        <h5 class="fw-semibold mb-4 text-white">Navigare rapidă</h5>
                        <div class="row">
                            <div class="col-sm-6">
                                <ul class="list-unstyled">
                                    <li class="mb-3">
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index"
                                           class="text-light text-decoration-none hover-green d-flex align-items-center fs-6">
                                            <i class="bi bi-person me-3"></i>
                                            Profil
                                        </a>
                                    </li>
                                    <li class="mb-3">
                                        <a asp-page="/Trasee/TraseePersonalizate"
                                           class="text-light text-decoration-none hover-green d-flex align-items-center fs-6">
                                            <i class="bi bi-map me-3"></i>
                                            Trasee personalizate
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-sm-6">
                                <ul class="list-unstyled">
                                    <li class="mb-3">
                                        <a href="/TraseeIstorice"
                                           class="text-light text-decoration-none hover-green d-flex align-items-center fs-6">
                                            <i class="bi bi-building me-3"></i>
                                            Trasee Istorice
                                        </a>
                                    </li>
                                    <li class="mb-3">
                                        <a href="/TraseeCulinare"
                                           class="text-light text-decoration-none hover-green d-flex align-items-center fs-6">
                                            <i class="bi bi-cup-hot me-3"></i>
                                            Trasee Culinare
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4 border-secondary" />
                <div class="text-center">
                    <p class="mb-0 text-muted">&copy; 2025 TopicTripsGuide. Toate drepturile rezervate.</p>
                </div>
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const isAdmin = document.body.dataset.isAdmin === "true";
            if (isAdmin) {
                document.querySelectorAll('.admin-only').forEach(el => el.classList.remove('d-none'));
            }
        });
    </script>
</body>
</html>