@section Styles {
    <style>
        .panou-admin {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .admin-header-icon {
            display: inline-block;
            padding: 1.5rem;
            background: linear-gradient(135deg, var(--primary-green), #4ade80);
            border-radius: 50%;
            box-shadow: 0 8px 32px rgba(149, 216, 42, 0.3);
        }

        .admin-card {
            border-radius: 1.5rem !important;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            background: white;
            position: relative;
            overflow: hidden;
        }

            .admin-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-green), #4ade80);
                transform: scaleX(0);
                transform-origin: left;
                transition: transform 0.4s ease;
            }

            .admin-card:hover::before {
                transform: scaleX(1);
            }

            .admin-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 60px rgba(149, 216, 42, 0.2);
            }

        .card-icon {
            transition: transform 0.4s ease;
        }

        .admin-card:hover .card-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .admin-card .card-title {
            font-size: 1.5rem;
            color: #2d3748;
            transition: color 0.3s ease;
        }

        .admin-card:hover .card-title {
            color: var(--primary-green);
        }

        .admin-card .card-text {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .admin-card .btn {
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(149, 216, 42, 0.3);
        }

            .admin-card .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(149, 216, 42, 0.4);
            }

        /* Responsive improvements */
        @@media (max-width: 768px) {
            .panou-admin .container {
                padding: 2rem 1rem;
            }

            .display-4 {
                font-size: 2.5rem;
            }

            .admin-card .card-body {
                padding: 2rem 1.5rem;
            }

            .admin-card .card-title {
                font-size: 1.3rem;
            }

            .admin-card .card-text {
                font-size: 1rem;
            }

            .card-icon i {
                font-size: 3rem !important;
            }
        }

        /* Animation pentru intrare */
        .admin-card {
            animation: fadeInUp 0.6s ease-out;
        }

            .admin-card:nth-child(2) {
                animation-delay: 0.2s;
            }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}