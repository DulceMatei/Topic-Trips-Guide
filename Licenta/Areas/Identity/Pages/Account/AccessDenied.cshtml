@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acces Interzis";
    ViewBag.HideFooter = true;
}
    <div class="access-denied-container">
        <div class="container py-3">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                    <div class="card border-0 shadow-lg rounded-4">
                        <div class="card-body text-center p-4">
                            <div class="access-denied-icon">
                                <i class="bi bi-shield-exclamation display-1 text-warning"></i>
                            </div>

                            <!-- Titlu -->
                            <h1 class="h2 fw-bold text-dark mb-3">Acces Interzis</h1>

                            <!-- Mesaj -->
                            <p class="text-muted fs-5 mb-4">
                                Nu aveți permisiunea necesară pentru a accesa această resursă.
                            </p>

                            <!-- Mesaj suplimentar -->
                            <div class="alert alert-warning border-0 rounded-3 mb-4">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Informație:</strong> Această pagină este restricționată și necesită drepturi speciale de administrator.
                            </div>

                            <!-- Butoane -->
                            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                                <a class="btn btn-success btn-lg rounded-pill fw-semibold px-4" href="/home/index">
                                    <i class="bi bi-house me-2"></i>Înapoi la Pagina Principală
                                </a>

                                <a class="btn btn-outline-secondary btn-lg rounded-pill fw-semibold px-4" href="javascript:history.back()">
                                    <i class="bi bi-arrow-left me-2"></i>Înapoi
                                </a>
                            </div>

                            <!-- Contact info -->
                            <div class="mt-4 pt-4 border-top">
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-envelope me-2"></i>
                                    Aveți întrebări? Contactați administratorul site-ului.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<style>
    .access-denied-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 1rem 0;
    }

    .access-denied-icon {
        display: inline-block;
        padding: 1.5rem;
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        border-radius: 50%;
        box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
        animation: pulse 2s infinite;
        margin-bottom: 1.5rem;
    }

    .access-denied-container .card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
        animation: fadeInUp 0.6s ease-out;
    }

    .access-denied-container .btn {
        transition: all 0.3s ease;
    }

        .access-denied-container .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .access-denied-container .btn-success {
        background-color: var(--primary-green, #28a745);
        border-color: var(--primary-green, #28a745);
    }

        .access-denied-container .btn-success:hover {
            background-color: var(--primary-green-hover, #218838);
            border-color: var(--primary-green-hover, #218838);
        }

    .access-denied-container .alert {
        background-color: rgba(255, 243, 205, 0.8);
        color: #856404;
    }

    /* Animații */
    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive Design */

    @@media (min-width: 1400px) {
        .access-denied-container

    {
        align-items: center;
    }

    .access-denied-icon {
        padding: 2.5rem;
        margin-bottom: 2rem;
    }

    .card-body {
        padding: 3.5rem !important;
    }

    }

