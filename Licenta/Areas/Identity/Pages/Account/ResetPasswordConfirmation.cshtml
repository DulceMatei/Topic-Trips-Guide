@page
@{
    ViewData["Title"] = "Parolă resetată";
    ViewBag.HideFooter = true;
    ViewBag.HideNavbar = true;
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow login-card w-100" style="max-width: 500px;">
        <div class="card-body p-4 text-center">
            <h2 class="text-success mb-3">@ViewData["Title"]</h2>
            <p class="text-muted">Parola ta a fost schimbată cu succes. Te poți autentifica cu noua parolă.</p>

            <a asp-page="./Login" class="btn btn-success mt-3 w-100 rounded-20 fw-semibold">
                <i class="bi bi-box-arrow-in-right me-1"></i> Autentifică-te
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .login-card {
            background-color: #ffffff;
            border-radius: 1.5rem;
            padding: 2rem;
            animation: fadeInUp 0.5s ease-out;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn.rounded-20 {
            border-radius: 1.25rem !important;
            padding: 0.75rem;
            font-size: 1.05rem;
        }

        @@media (max-width: 576px) {
            .login-card

        {
            padding: 1.5rem;
            border-radius: 1rem;
            margin: 1rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        }
    </style>
}
