@page
@model Licenta.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Resetare parolă";
    ViewBag.HideFooter = true;
    ViewBag.HideNavbar = true;
}

<div class="forgot-password-card mt-5">
    <h2 class="text-center mb-3">@ViewData["Title"]</h2>
    <p class="text-muted text-center mb-4">
        Introdu adresa de email pentru a primi un link de resetare a parolei.
    </p>

    <form method="post" novalidate>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control rounded-20" placeholder="nume@exemplu.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 rounded-20">
            Trimite link de resetare
        </button>
    </form>
    <div class="text-center mt-3">
        <a class="btn btn-outline-success rounded-3 px-4" asp-page="./Login">
            <i class="bi bi-arrow-left-circle me-1"></i> Revino la autentificare
        </a>
    </div>
</div>
<style>
.forgot-password-card {
    max-width: 500px;
    background: #ffffff;
    padding: 2rem;
    border-radius: 1.5rem;
    margin: 0 auto;
    box-shadow: 0 0 20px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.form-control.rounded-20 {
    border-radius: 1.25rem;
    padding: 0.75rem 1rem;
    font-size: 1rem;
}

.btn.rounded-20 {
    border-radius: 1.25rem;
    padding: 0.75rem;
    font-size: 1.1rem;
}

/* Responsive */
@@media (max-width: 576px) {
    .forgot-password-card {
        padding: 1.5rem 1rem;
        margin: 1rem;
    }

    .btn.rounded-20 {
        padding: 0.6rem;
        font-size: 1rem;
    }
}

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }


</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}