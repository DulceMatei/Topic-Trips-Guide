@page
@model Licenta.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Setează parolă nouă";
    ViewBag.HideFooter = true;
    ViewBag.HideNavbar = true;
}

<div class="forgot-password-card mt-5">
    <h2 class="text-center mb-3">@ViewData["Title"]</h2>
    <p class="text-muted text-center mb-4">
        Setează o nouă parolă pentru contul tău.
    </p>

    <form method="post" novalidate>
        <input type="hidden" asp-for="Input.Code" />
        <input type="hidden" asp-for="OriginalEmail" />

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control rounded-20" placeholder="Email" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control rounded-20" placeholder="Parolă nouă" />
            <label asp-for="Input.Password">Parolă nouă</label>
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control rounded-20" placeholder="Confirmă parola" />
            <label asp-for="Input.ConfirmPassword">Confirmă parola</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

        <button type="submit" class="btn btn-success w-100 rounded-20">
            Resetează parola
        </button>
    </form>

    <div class="text-center mt-3">
        <a class="btn btn-outline-success rounded-3 px-4" asp-page="./Login">
            <i class="bi bi-arrow-left-circle me-1"></i> Revino la autentificare
        </a>
    </div>

</div>

<style>
    .forgot-password-card {
        max-width: 500px;
        background: #ffffff;
        padding: 2rem;
        border-radius: 1.5rem;
        margin: 0 auto;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .form-control.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem;
        font-size: 1.1rem;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .forgot-password-card {
            padding: 1.5rem 1rem;
            margin: 1rem;
        }

        .btn.rounded-20 {
            padding: 0.6rem;
            font-size: 1rem;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
