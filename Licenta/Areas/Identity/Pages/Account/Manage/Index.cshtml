@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="profile-card mt-5">
    <h2 class="text-center text-success mb-3">@ViewData["Title"]</h2>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form method="post" novalidate>
        <div class="form-floating mb-3">
            <input class="form-control rounded-20" value="@Model.CurrentNume" disabled placeholder="Nume curent" />
            <label>Nume curent</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Nume" class="form-control rounded-20" placeholder="Nume nou" />
            <label asp-for="Input.Nume">Nume nou</label>
            <span asp-validation-for="Input.Nume" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 rounded-20">Salvează modificările</button>
    </form>
</div>

<style>
    .profile-card {
        max-width: 500px;
        background: #ffffff;
        padding: 2rem;
        border-radius: 1.5rem;
        margin: 0 auto;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .form-control.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem;
        font-size: 1.1rem;
    }

    .profile-card .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }


    @@media (max-width: 576px) {
        .profile-card

    {
        padding: 1.5rem 1rem;
        margin: 1rem;
    }

    .btn.rounded-20 {
        padding: 0.6rem;
        font-size: 1rem;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
