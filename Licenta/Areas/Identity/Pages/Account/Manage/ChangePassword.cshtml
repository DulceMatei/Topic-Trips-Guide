@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Schimbă parola";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="password-card mt-5">
    <h2 class="text-center text-success mb-3">@ViewData["Title"]</h2>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.OldPassword" class="form-control rounded-20" placeholder="Parola curentă" />
            <label asp-for="Input.OldPassword">Parola curentă</label>
            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.NewPassword" class="form-control rounded-20" placeholder="Parola nouă" />
            <label asp-for="Input.NewPassword">Parola nouă</label>
            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control rounded-20" placeholder="Confirmă parola" />
            <label asp-for="Input.ConfirmPassword">Confirmă parola</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 rounded-20 fw-semibold">
            Actualizează parola
        </button>
    </form>
</div>

<style>
    .password-card {
        max-width: 500px;
        background: #ffffff;
        padding: 2rem;
        border-radius: 1.5rem;
        margin: 0 auto;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .form-control.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn.rounded-20 {
        border-radius: 1.25rem;
        padding: 0.75rem;
        font-size: 1.1rem;
    }

    @@media (max-width: 576px) {
        .password-card

    {
        padding: 1.5rem 1rem;
        margin: 1rem;
    }

    .btn.rounded-20 {
        padding: 0.6rem;
        font-size: 1rem;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
